                <quantity>1</quantity></supportEquipDescr>
            <supportEquipDescr id="TOOL_MAGNIFIER">
                <name>Magnifying Glass (5x or 10x)</name>
                <quantity>1</quantity>
            </supportEquipDescr>
            <supportEquipDescr id="TOOL_DEPTH_GAUGE"保健品>
                <name>Depth Gauge (0-1 inch, resolution 0.001 inch)</name>
                <quantity>1</quantity>
                <descr>If dimensional checks are required.</descr>
            </supportEquipDescr>
